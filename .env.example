# Network (mainnet | sepolia)
STARKNET_NETWORK=mainnet

# Watchlist tokens (comma-separated symbols)
WATCHLIST=ETH,STRK,USDC,LORDS,ZEND,BROTHER,NSTR

# Alert thresholds
PRICE_CHANGE_THRESHOLD=5
VOLUME_SPIKE_THRESHOLD=200

# Reports
REPORTS_DIR=./reports
OUTPUT_FORMAT=markdown

# Cron schedules (cron expressions)
SNAPSHOT_CRON=0 */6 * * *
REPORT_CRON=0 7 * * *
ALERT_CRON=*/15 * * * *
